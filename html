  const categoryIcons = {
    "Task Management & Productivity": "âœ“",
    "Finding & Organizing Items": "ðŸ”",
    "Household Chores & Cleaning": "ðŸ§¹",
    "Morning & Sleep Routines": "ðŸŒ…",
    "Medication & Health": "ðŸ’Š",
    "Work & Study": "ðŸ’¼",
    "Wellness & Mental Health": "ðŸ§˜",
    "Social & Conversation": "ðŸ’¬",
    "Unconventional & Weird Hacks": "â­",
    "Structure & Planning": "ðŸ“Š"
  };

  const state = {
    search: "",
    category: "all",
    issue: "all",
    difficulty: "all",
    sort: "none"
  };

  function initFilters() {
    const categoryFilter = document.getElementById("categoryFilter");
    const issueFilter = document.getElementById("issueFilter");

    const categories = [...new Set(hacks.map(h => h.category))].sort();
    const issues = [...new Set(hacks.map(h => h.issue))].sort((a,b) => a.localeCompare(b));

    categories.forEach(cat => {
      const opt = document.createElement("option");
      opt.value = cat;
      opt.textContent = cat;
      categoryFilter.appendChild(opt);
    });

    issues.forEach(issue => {
      const opt = document.createElement("option");
      opt.value = issue;
      opt.textContent = issue;
      issueFilter.appendChild(opt);
    });
  }

  function applyFiltersAndSort() {
    let filtered = hacks.filter(h => {
      if (state.category !== "all" && h.category !== state.category) return false;
      if (state.issue !== "all" && h.issue !== state.issue) return false;
      if (state.difficulty !== "all" && h.difficulty !== state.difficulty) return false;

      if (state.search.trim()) {
        const q = state.search.toLowerCase();
        const blob = (h.name + " " + h.issue + " " + h.description).toLowerCase();
        if (!blob.includes(q)) return false;
      }
      return true;
    });

    if (state.sort === "issue-asc" || state.sort === "issue-desc") {
      filtered.sort((a,b) => a.issue.localeCompare(b.issue));
      if (state.sort === "issue-desc") filtered.reverse();
    } else if (state.sort === "difficulty") {
      const order = { "Easy": 0, "Medium": 1, "Hard": 2 };
      filtered.sort((a,b) => (order[a.difficulty] ?? 99) - (order[b.difficulty] ?? 99));
    } else if (state.sort === "time") {
      const rank = t => {
        const map = {
          "Immediate": 0,
          "Daily": 1,
          "1 day": 2,
          "2 days": 3,
          "1 week": 4,
          "1-2 days": 5,
          "1-2 hours/week": 6,
          "Weekly": 7,
          "1-2 weeks": 8,
          "2-3 days": 9,
          "2 weeks": 10,
          "2-4 weeks": 11,
          "1 time": 12,
          "As needed": 13,
          "Ongoing": 14,
          "Commitment": 15,
          "Daily planning": 16
        };
        return map[t] ?? 99;
      };
      filtered.sort((a,b) => rank(a.time) - rank(b.time));
    } else if (state.sort === "name") {
      filtered.sort((a,b) => a.name.localeCompare(b.name));
    }

    return filtered;
  }

  function render() {
    const categoriesContainer = document.getElementById("categoriesContainer");
    categoriesContainer.innerHTML = "";

    const filtered = applyFiltersAndSort();

    const summaryBar = document.getElementById("summaryBar");
    const catSet = new Set(filtered.map(h => h.category));
    summaryBar.innerHTML = `Showing <strong>${filtered.length}</strong> hacks across <strong>${catSet.size}</strong> categories.`;

    const byCat = {};
    filtered.forEach(h => {
      if (!byCat[h.category]) byCat[h.category] = [];
      byCat[h.category].push(h);
    });

    const allCats = [...new Set(hacks.map(h => h.category))];
    allCats.forEach(catName => {
      const hacksInCat = byCat[catName] || [];
      if (!hacksInCat.length) return;

      const details = document.createElement("details");
      details.className = "category";
      details.open = true;

      const summary = document.createElement("summary");
      summary.className = "category-header";

      const left = document.createElement("div");
      left.className = "category-title-left";
      const iconSpan = document.createElement("span");
      iconSpan.className = "cat-icon";
      iconSpan.textContent = categoryIcons[catName] || "â€¢";
      const nameSpan = document.createElement("span");
      nameSpan.className = "cat-name";
      nameSpan.textContent = catName;
      const countSpan = document.createElement("span");
      countSpan.className = "cat-count";
      countSpan.textContent = `${hacksInCat.length} hack${hacksInCat.length !== 1 ? "s" : ""}`;
      left.appendChild(iconSpan);
      left.appendChild(nameSpan);
      left.appendChild(countSpan);

      const right = document.createElement("div");
      right.className = "cat-actions";

      const sortLabel = document.createElement("span");
      sortLabel.textContent = "Sort:";
      sortLabel.style.opacity = "0.7";

      const sortIssue = document.createElement("span");
      sortIssue.className = "cat-toggle";
      sortIssue.textContent = "Issue";
      sortIssue.title = "Click to sort by issue";

      const sortDiff = document.createElement("span");
      sortDiff.className = "cat-toggle";
      sortDiff.textContent = "Difficulty";
      sortDiff.title = "Click to sort by difficulty";

      const sortTime = document.createElement("span");
      sortTime.className = "cat-toggle";
      sortTime.textContent = "Time";
      sortTime.title = "Click to sort by time to implement";

      function applySortHighlight() {
        [sortIssue, sortDiff, sortTime].forEach(el => {
          el.style.fontWeight = "400";
          el.style.textDecoration = "none";
        });
        if (state.sort === "issue-asc" || state.sort === "issue-desc") {
          sortIssue.style.fontWeight = "700";
          sortIssue.style.textDecoration = "underline";
        } else if (state.sort === "difficulty") {
          sortDiff.style.fontWeight = "700";
          sortDiff.style.textDecoration = "underline";
        } else if (state.sort === "time") {
          sortTime.style.fontWeight = "700";
          sortTime.style.textDecoration = "underline";
        }
      }
      applySortHighlight();

      sortIssue.addEventListener("click", () => {
        if (state.sort === "issue-asc") {
          state.sort = "issue-desc";
        } else {
          state.sort = "issue-asc";
        }
        document.getElementById("sortSelect").value = state.sort;
        render();
      });

      sortDiff.addEventListener("click", () => {
        state.sort = "difficulty";
        document.getElementById("sortSelect").value = state.sort;
        render();
      });

      sortTime.addEventListener("click", () => {
        state.sort = "time";
        document.getElementById("sortSelect").value = state.sort;
        render();
      });

      right.appendChild(sortLabel);
      right.appendChild(sortIssue);
      right.appendChild(sortDiff);
      right.appendChild(sortTime);

      summary.appendChild(left);
      summary.appendChild(right);
      details.appendChild(summary);

      const grid = document.createElement("div");
      grid.className = "hacks-grid";

      hacksInCat.forEach(h => {
        const card = document.createElement("div");
        card.className = "hack-card";
        const name = document.createElement("div");
        name.className = "hack-name";
        name.textContent = h.name;
        const issue = document.createElement("div");
        issue.className = "hack-issue";
        issue.textContent = `Issue: ${h.issue}`;
        const desc = document.createElement("div");
        desc.className = "hack-description";
        desc.textContent = h.description;
        const meta = document.createElement("div");
        meta.className = "hack-meta";
        const diff = document.createElement("span");
        diff.className = "badge " + h.difficulty.toLowerCase();
        diff.textContent = h.difficulty;
        const time = document.createElement("span");
        time.className = "time-badge";
        time.textContent = h.time;
        meta.appendChild(diff);
        meta.appendChild(time);
        card.appendChild(name);
        card.appendChild(issue);
        card.appendChild(desc);
        card.appendChild(meta);
        grid.appendChild(card);
      });

      details.appendChild(grid);
      categoriesContainer.appendChild(details);
    });
  }

  function bindEvents() {
    const searchInput      = document.getElementById("searchInput");
    const categoryFilter   = document.getElementById("categoryFilter");
    const issueFilter      = document.getElementById("issueFilter");
    const difficultyFilter = document.getElementById("difficultyFilter");
    const sortSelect       = document.getElementById("sortSelect");
    const pillExpandAll    = document.getElementById("pill-expand-all");
    const pillCollapseAll  = document.getElementById("pill-collapse-all");

    searchInput.addEventListener("input", e => {
      state.search = e.target.value;
      render();
    });
    categoryFilter.addEventListener("change", e => {
      state.category = e.target.value;
      render();
    });
    issueFilter.addEventListener("change", e => {
      state.issue = e.target.value;
      render();
    });
    difficultyFilter.addEventListener("change", e => {
      state.difficulty = e.target.value;
      render();
    });
    sortSelect.addEventListener("change", e => {
      state.sort = e.target.value;
      render();
    });

    pillExpandAll.addEventListener("click", () => {
      pillExpandAll.classList.add("active");
      pillCollapseAll.classList.remove("active");
      document.querySelectorAll("details.category").forEach(d => d.open = true);
    });
    pillCollapseAll.addEventListener("click", () => {
      pillCollapseAll.classList.add("active");
      pillExpandAll.classList.remove("active");
      document.querySelectorAll("details.category").forEach(d => d.open = false);
    });
  }

  initFilters();
  bindEvents();
  render();
</script>
</body>
</html>
