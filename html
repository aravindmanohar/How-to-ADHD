    // Structure & Planning (11)
    {category: "Structure & Planning", issue: "Planning", name: "Weekly Planning Session", difficulty: "Medium", time: "1-2 hours/week", description: "Dedicate time each week to plan projects and organize tasks for upcoming week."},
